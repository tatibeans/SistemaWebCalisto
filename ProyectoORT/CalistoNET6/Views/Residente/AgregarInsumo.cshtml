@model CalistoNET6.Models.ModeloInsumo
@using Dominio.Entidades

<div class="modal-header">
    <h4 class="modal-tittle">Agregar insumo</h4>
    <button type="button" class="btn-close align-right" data-bs-dismiss="modal" aria-label="Close" data-toggle="tooltip" data-placement="bottom" title="Cerrar"></button>
    <hr />
</div>

<div class="modal-body ">

    <div>
        <div>
            <form asp-action="AgregarInsumo" id="agregarInsumo">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row mt-2 ">
                    <div class="col-5 "> <label asp-for="CiResidente" class="control-label"></label></div>
                    <div class="col-7 "> <input asp-for="CiResidente" class="form-control " readonly /></div>
                </div>
                <div class="form-group row mt-2 ">
                    <div class="offset-5 col-6">  <span asp-validation-for="CiResidente" class="text-danger"></span></div>
                </div>
                <div class="form-group row mt-2 ">
                    <div class="col-5 "><label asp-for="Descripcion" class="control-label"></label></div>
                    <div class="col-7 "> <input asp-for="Descripcion" class="form-control" /></div>                   
                </div>
                <div class="form-group row mt-2 ">
                    <div class="offset-5 col-6 ">  <span asp-validation-for="Descripcion" class="text-danger"></span></div>
                </div>

                <div class="form-group row mt-2">
                    <div class="col-5 "><label asp-for="Stock" class="control-label"></label></div>
                    <div class="col-7 "> <input asp-for="Stock" class="form-control" onkeypress="return event.charCode >= 48 && event.charCode <= 57" /></div>
                </div>
                <div class="form-group row mt-2 ">
                    <div class="offset-5 col-6 ">  <span asp-validation-for="Stock" class="text-danger"></span></div>
                </div>

                <div class="form-group row mt-2">
                    <div class="col-5 ">   <label asp-for="Tipo" class="control-label"></label></div>
                    <div class="col-7 ">
                        @Html.DropDownListFor(m=>m.Tipo, Html.GetEnumSelectList<TipoInsumo>(),"Seleccione",new { @class = "form-control" })
                    </div>                 
                </div>
                 <div class="form-group row mt-2 ">
                    <div class="offset-5 col-6 ">  <span asp-validation-for="Tipo" class="text-danger"></span></div>
                </div>

                <div class="modal-footer mt-2">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
</div>
<script>
    $.validator.unobtrusive.parse("#agregarInsumo");

</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
